            <th>Person</th>
            <th></th>
            <th>fifth</th>
            <th>sixth</th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td><a href="/stories/{{_id}}">{{title}}</a></td>
            <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
            <td><a href="/stories/user/{{user._id}}">{{user.displayName}}</a><td>
            <td><span class="dash-status">{{status1}}</span></td>
            <td><a href="/stories/{{_id}}" class="btn grey">Read More</a></td>
        </tr>
